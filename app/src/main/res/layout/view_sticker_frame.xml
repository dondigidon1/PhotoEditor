<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/sticker_frame"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_sticker_frame"
    android:padding="0dp"
    >

    <ImageView
        android:id="@+id/image_sticker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="32dp"
        app:srcCompat="@mipmap/ic_launcher"
        />

    <ImageView
        android:id="@+id/button_cross"
        style="@style/StickerFrameButton"
        android:layout_gravity="top|start"
        android:visibility="invisible"
        app:srcCompat="@drawable/btn_sticker_frame_cross"
        tool:visibility="visible"
        />

    <ImageView
        android:id="@+id/button_stretch"
        style="@style/StickerFrameButton"
        android:layout_gravity="bottom|end"
        android:visibility="invisible"
        app:srcCompat="@drawable/btn_sticker_frame_stretch"
        tool:visibility="visible"
        />
</FrameLayout>