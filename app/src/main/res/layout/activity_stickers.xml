<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    tools:context="com.redrocket.photoeditor.presentation.stickers.view.StickerScreenActivity">

    <ImageView
        android:id="@+id/image_picture"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/tabs"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/activity_margin"
        android:elevation="@dimen/picture_elevation"
        android:outlineProvider="bounds"
        android:alpha="0"
        tools:alpha="1f"/>

    <com.redrocket.photoeditor.presentation.stickers.view.stickerview.StickerBoard
        android:id="@+id/sticker_board"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/image_picture"
        app:layout_constraintLeft_toLeftOf="@id/image_picture"
        app:layout_constraintRight_toRightOf="@id/image_picture"
        app:layout_constraintTop_toTopOf="@id/image_picture"
        android:elevation="@dimen/picture_elevation"
        android:alpha="0" />

    <com.redrocket.photoeditor.presentation.stickers.view.pane.CategoryTabs
        android:id="@+id/tabs"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@+id/rv_sticker_previews"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:elevation="2dp"
        android:outlineProvider="bounds"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_sticker_previews"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginLeft="@dimen/sticker_grid_padding_horizontal"
        android:layout_marginRight="@dimen/sticker_grid_padding_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/colorPrimaryLight"
        />
</android.support.constraint.ConstraintLayout>
